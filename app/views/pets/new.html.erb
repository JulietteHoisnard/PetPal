<div class="container pt-5">
  <h2>Add your Pet</h2>
    <%= simple_form_for [@pet] do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :availability %>
    <%= f.input :species %>
    <%= f.input :pet_ability %>
    <%= f.input :location %>
    <%= f.input :photos, as: :file %>
    <%= f.submit 'Add Pet', class: 'btn btn-primary' %>
    <% end %>
    <hr>
    <%= link_to  "Back", pets_path, class: "btn btn-primary"%>
</div>

