<div class="banner d-flex align-items-center justify-content-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path("landing-bg.jpg") %>);">
  <div class="container">
    <div class="row justify-content-center pb-3">
      <h1>Find your furry pal for a weekend or just for a walk</h1>
      <div class="search-inline">
        <form action="/pets" class="form-inline justify-content-center">
          <div class="input-group mb-2 mr-sm-2">
            <%= form_tag pets_path, method: :get do %>
            <div class="label-home">
              <%= text_field_tag :query1,
              params[:query1],
              class: "form-control",
              placeholder: "Search by species" %>
            </div>
            <div class="label-home">
              <%= text_field_tag :query2,
              params[:query2],
              class: "form-control",
              placeholder: "Search by location" %>
            </div>
            <%# <button type="submit" class="btn btn-warning mb-2">Find Your PetPal!</button> %>
            <%= submit_tag "Find Your PetPal!", class: "btn btn-warning mb-2" %>
            <% end %>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div id="scrollhint">
    <a href="#" class="arrow down" onclick="scrollDown(event)">Scrolldown</a>
  </div>
</div>

